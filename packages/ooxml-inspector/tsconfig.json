{
  "compilerOptions": {
    "checkJs": true,
    "allowJs": true,

    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "target": "ES2020",
    "lib": ["ES2020"],
    "types": ["node"],

    "skipLibCheck": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "baseUrl": "."
  },
  "exclude": ["node_modules", "dist", "**/*.test.js"]
}
